{
  "name": "use-bloc",
  "version": "2.3.1",
  "description": "\"React useBloc custom hook to use with BLoC pattern\"",
  "keywords": [
    "react",
    "hook",
    "bloc"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf dist/* && tsc",
    "prepublishOnly": "npm run build",
    "lint": "tsc --noEmit && eslint ./src --ext .ts --max-warnings 0",
    "format": "prettier -w ./src",
    "format:check": "prettier -c ./src",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbaez/use-bloc.git"
  },
  "author": "Jaime Baez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jbaez/use-bloc/issues"
  },
  "homepage": "https://github.com/jbaez/use-bloc#readme",
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-jest": "^27.4.6",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
